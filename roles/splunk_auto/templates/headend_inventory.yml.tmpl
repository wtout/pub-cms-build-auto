  splunk_phantom:
    hosts:
      {{ hostvars[groups['splphn'][0]]['vm']['name'] }}:
    vars:
      phantom:
        mgt_port: 443
        username: phantom
        group: phantom

  splunk_cluster_master:
    hosts:
      {{ hostvars[groups['splmas'][0]]['vm']['name'] }}:
    vars:
      splunk:
        role: splunk_cluster_master
        site: site1

  splunk_indexer:
    hosts:
      {{ hostvars[groups['splind'][0]]['vm']['name'] }}:
        splunk:
          site: site1
      {{ hostvars[groups['splind'][1]]['vm']['name'] }}:
        splunk:
          site: site2
      {{ hostvars[groups['splind'][2]]['vm']['name'] }}:
        splunk:
          site: site3
    vars:
      splunk:
        role: splunk_indexer
        s2s_enable: true
        s2s_port: 9997

  splunk_deployer:
    hosts:
      {{ hostvars[groups['spldplr'][0]]['vm']['name'] }}:
    vars:
      splunk:
        role: splunk_deployer
        site: site0

  splunk_search_head:
    hosts:
      {{ hostvars[groups['splmth'][2]]['vm']['name'] }}:
        splunk_search_head_captain: false
      {{ hostvars[groups['splmth'][1]]['vm']['name'] }}:
        splunk_search_head_captain: false
      {{ hostvars[groups['splmth'][0]]['vm']['name'] }}:
        splunk_search_head_captain: true
    vars:
      splunk:
        role: splunk_search_head
        site: site0
        hostname: {{ hostvars[groups['splmth'][0]]['vm']['name'] }}
        # ^^ Host name is the searchhead captain
        trustedIP: "127.0.0.1, 172.29.9.82"

